<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/bg_edittext"
            android:orientation="vertical"
            app:cardCornerRadius="4dp"
            app:cardElevation="10dp"
            app:contentPadding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSalaryTxt">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/outTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/campton_book"
                    android:text="@string/thanks"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/lightPurple" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/campton_book"
                    android:text="@string/output_intro" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvExpSav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:background="@drawable/bg_edittext"
                    android:orientation="vertical"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="25dp"
                    app:contentPadding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSalaryTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="@font/campton_book"
                                android:text="Your Monthly Salary" />

                            <TextView
                                android:id="@+id/tvSalary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/campton_book"
                                android:gravity="center"
                                android:textColor="@color/purple"
                                android:textSize="20sp"
                                tools:text="Rs. 25000" />
                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="#A9A9A9" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSavingTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="@font/campton_book"
                                android:text="Your Monthly Savings" />

                            <TextView
                                android:id="@+id/tvSaving"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start"
                                android:fontFamily="@font/campton_book"
                                android:textColor="@color/blue"
                                android:textSize="20sp"
                                tools:text="Rs. 25000" />

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="500dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#A9A9A9" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

<!--                        <ImageView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="135dp"-->
<!--                            android:gravity="center"-->
<!--                            android:src="@drawable/illust1" />-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:orientation="horizontal">

                            <SeekBar
                                android:id="@+id/sb50"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:progress="50"
                                android:padding="5dp" />

                            <TextView
                                android:id="@+id/tv50"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:fontFamily="@font/campton_book"
                                android:textColor="@color/blue"
                                tools:text="Rs. 25000" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <SeekBar
                                android:id="@+id/sb75"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:progress="75"
                                android:layout_weight="2"
                                android:padding="5dp" />

                            <TextView
                                android:id="@+id/tv75"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:fontFamily="@font/campton_book"
                                android:textColor="@color/blue"
                                tools:text="Rs. 25000" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <SeekBar
                                android:id="@+id/sb100"
                                android:layout_width="0dp"
                                android:progress="100"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:padding="5dp" />

                            <TextView
                                android:id="@+id/tv100"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:fontFamily="@font/campton_book"
                                android:textColor="@color/blue"
                                tools:text="Rs. 25000" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#A9A9A9" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

<!--                        <ImageView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="144dp"-->
<!--                            android:gravity="center"-->
<!--                            android:src="@drawable/illust2" />-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <SeekBar
                                android:id="@+id/sb10"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:progress="10"
                                android:layout_weight="2"
                                android:padding="5dp" />

                            <TextView
                                android:id="@+id/tv10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:fontFamily="@font/campton_book"
                                android:textColor="@color/purple"
                                tools:text="Rs. 25000" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <SeekBar
                                android:id="@+id/sb20"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:progress="20"
                                android:layout_weight="2"
                                android:padding="5dp" />

                            <TextView
                                android:id="@+id/tv20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:fontFamily="@font/campton_book"
                                android:textColor="@color/purple"
                                tools:text="Rs. 25000" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <SeekBar
                                android:id="@+id/sb30"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:progress="30"
                                android:layout_weight="2"
                                android:padding="5dp" />

                            <TextView
                                android:id="@+id/tv30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:fontFamily="@font/campton_book"
                                android:textColor="@color/purple"
                                tools:text="Rs. 25000" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/campton_book"
                    android:layout_marginBottom="45dp"
                    android:text="@string/graph_text" />

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/gvSaving"
                    android:layout_width="match_parent"
                    android:layout_height="200dip" />

                <Button
                    android:id="@+id/btnPrint"
                    android:layout_width="180dp"
                    android:fontFamily="@font/campton_book"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_round_corner"
                    android:text="@string/print"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                  />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/campton_book"
                    android:textStyle="bold"
                    android:text="About Us" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="45dp"
                    android:gravity="left"
                    android:fontFamily="@font/campton_book"
                    android:textColor="#00008B"
                    android:text="@string/about_us_text" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</LinearLayout>